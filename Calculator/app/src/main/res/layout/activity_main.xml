<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/calc_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:cardBackgroundColor="@color/screen_background"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/expression"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/expression"
                android:textColor="@color/title"
                android:textSize="16sp"

                app:layout_constraintBottom_toTopOf="@id/expression_numbers"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/expression_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="0"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/result"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/expression" />

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/result"
                android:textColor="@color/title"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/result_numbers"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expression_numbers" />

            <TextView
                android:id="@+id/result_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/expression_numbers" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calc_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.5">

        <Button
            android:id="@+id/b_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/digit_button"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/b_comma"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/b_1"
            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_comma"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/digit_button"
            android:text=","
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/b_backspace"
            app:layout_constraintStart_toEndOf="@id/b_0"
            app:layout_constraintTop_toBottomOf="@id/b_2"
            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_backspace"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/action_button"
            android:text="âŒ«"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/b_plus"
            app:layout_constraintStart_toEndOf="@id/b_comma"
            app:layout_constraintTop_toBottomOf="@id/b_3"
            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_plus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/action_button"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/b_backspace"
            app:layout_constraintTop_toBottomOf="@id/b_minus"
            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/digit_button"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/b_0"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/b_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/b_4"
            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/digit_button"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/b_comma"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/b_3"
            app:layout_constraintStart_toEndOf="@id/b_1"
            app:layout_constraintTop_toBottomOf="@id/b_5"
            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/digit_button"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/b_backspace"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/b_plus"
            app:layout_constraintStart_toEndOf="@id/b_2"
            app:layout_constraintTop_toBottomOf="@id/b_6"

            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_minus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/action_button"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/b_plus"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/b_3"
            app:layout_constraintTop_toBottomOf="@id/b_multiplication"
            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/digit_button"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/b_1"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/b_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/b_7"

            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/digit_button"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/b_2"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/b_6"
            app:layout_constraintStart_toEndOf="@id/b_4"
            app:layout_constraintTop_toBottomOf="@id/b_8"

            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/digit_button"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/b_3"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/b_multiplication"
            app:layout_constraintStart_toEndOf="@id/b_5"
            app:layout_constraintTop_toBottomOf="@id/b_9"

            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_multiplication"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/action_button"
            android:text="Ã—"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/b_minus"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/b_6"
            app:layout_constraintTop_toBottomOf="@id/b_division"

            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/digit_button"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/b_4"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/b_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/digit_button"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/b_5"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/b_9"
            app:layout_constraintStart_toEndOf="@id/b_7"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/digit_button"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/b_6"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/b_division"
            app:layout_constraintStart_toEndOf="@id/b_8"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintWidth_percent="0.20" />

        <Button
            android:id="@+id/b_division"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/action_button"
            android:text="Ã·"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/b_multiplication"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/b_9"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintWidth_percent="0.20" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>